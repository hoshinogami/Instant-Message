<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:background="#553b3a3a"
android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp"
        android:background="@android:color/white"
        android:orientation="vertical">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:background="@color/AliceBlue"
           >
           <EditText
               android:id="@+id/id_inputId"
               android:layout_width="308dp"
               android:layout_height="wrap_content"
               android:hint="请输入对方id" />
           <Button
               android:id="@+id/id_confirm"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="搜索"
               ></Button>
       </LinearLayout>

        <TextView
            android:id="@+id/id_resultNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:text="搜索结果" />
        <LinearLayout
            android:id="@+id/id_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/blue_100"
            android:visibility="invisible"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:id="@+id/id_friendName"
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="user"
                android:textSize="25dp"
                android:gravity="center_vertical|left"/>

            <TextView
                android:id="@+id/id_friendId"
                android:layout_width="116dp"
                android:layout_height="match_parent"
                android:text="id:1"
                android:textSize="25dp"
                android:gravity="center_vertical|left"/>

            <Button
                android:id="@+id/id_friendAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
